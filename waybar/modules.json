{
	"custom/arch": {
		"format": "󰣇",
		"tooltip": false
	},
	"niri/workspaces": {
		"format": "{index}",
		"format-icons": {
			"1": "",
			"2": "",
			"3": "",
			"4": "",
			"5": ""
		}
	},
	"wlr/taskbar": {
		"format": "{icon}",
		"icon-size": 18,
		"tooltip-format": "{title}",
		"on-click": "activate",
		"on-click-middle": "close"
	},
	"custom/playerctl": {
		"format": "{icon}  {text}",
		"return-type": "json",
		"max-length": 60,
		"exec": "~/.config/waybar/scripts/playerctl-mpris.sh",
		"interval": 2,
		"on-click": "~/.config/waybar/scripts/player.sh",
		"on-click-right": "~/.config/waybar/scripts/player-next.sh",
		"on-click-middle": "~/.config/waybar/scripts/player-prev.sh",
		"on-scroll-up": "~/.config/waybar/scripts/player-next.sh",
		"on-scroll-down": "~/.config/waybar/scripts/player-prev.sh",
		"escape": true,
		"format-icons": {
			"Playing": "",
			"Paused": "",
			"Stopped": ""
		}
	},
	"clock": {
		"interval": 1,
		"format": "{:%H:%M}",
		"format-alt": "{:%A, %B %d - %H:%M}",
		"tooltip-format": "<big>{calendar}</big>",
		"calendar": {
			"mode": "month",
			"mode-mon-col": 3,
			"weeks-pos": "right",
			"on-scroll": 1,
			"format": {
				"months": "<span color='#ffffff'><b>{}</b></span>",
				"days": "<span color='#ffffff'><b>{}</b></span>",
				"weeks": "<span color='#ffffff'><b>W{}</b></span>",
				"weekdays": "<span color='#ffffff'><b>{}</b></span>",
				"today": "<span color='#ffffff'><b><u>{}</u></b></span>"
			}
		}
	},
	"group/hardware": {
		"orientation": "inherit",
		"drawer": {
			"transition-duration": 300,
			"children-class": "not-memory",
			"transition-left-to-right": false
		},
		"modules": [
			"custom/system",
			"cpu",
			"temperature",
			"disk",
			"memory"
		]
	},
	"custom/system": {
		"format": "<span size='small'>  </span>",
		"tooltip": false
	},
	"cpu": {
		"format": " 󰍛 {usage}% ",
		"on-click": "kitty btop"
	},
	"temperature": {
		"format": " 󰈸 {temperatureC}°C ",
		"on-click": "kitty btop"
	},
	"disk": {
		"interval": 30,
		"format": " 󰋊 {percentage_used}% ",
		"path": "/",
		"on-click": "kitty btop"
	},
	"memory": {
		"format": "  {}% ",
		"on-click": "kitty btop"
	},
	"pulseaudio": {
		"format": "{icon} {volume}%",
		"format-bluetooth": "{icon} {volume}%",
		"format-muted": "󰖁 Muted",
		"format-icons": {
			"headphone": "󰋋",
			"headset": "󰋎",
			"default": [
				"󰕿",
				"󰖀",
				"󰕾"
			]
		},
		"tooltip": false,
		"smooth-scrolling-threshold": 0.1,
		"scroll-step": 5,
		"on-click": "pavucontrol",
		"ignored-sinks": [
			"Easy Effects Sink"
		]
	},
	"bluetooth": {
		"format": " {status}",
		"format-disabled": " {status}",
		"format-off": " {status}",
		"interval": 30,
		"on-click": "blueman-manager",
		"format-no-controller": ""
	},
	"network": {
		"format": "{ifname}",
		"format-wifi": "  {signalStrength}%",
		"format-ethernet": "󰌘 {ifname}",
		"format-disconnected": "disconnected",
		"tooltip-format": "󰌘 {ifname} via {gwaddri}",
		"tooltip-format-wifi": " {ifname} @ {essid}\nIP: {ipaddr}\nStrength: {signalStrength}%\nFreq: {frequency}MHz\n {bandwidthUpBits}  {bandwidthDownBits}",
		"tooltip-format-ethernet": "󰌘 {ifname}\nIP: {ipaddr}\n  {bandwidthUpBits}  {bandwidthDownBits}",
		"tooltip-format-disconnected": "disconnected",
		"max-length": 50,
		"on-click": "nm-connection-editor"
	},
	"battery": {
		"states": {
			"good": 95,
			"warning": 30,
			"critical": 10
		},
		"format": "{icon} {capacity}%",
		"format-charging": " {capacity}%",
		"format-plugged": " {capacity}%",
		"format-icons": [
			"",
			"",
			"",
			"",
			""
		]
	},
	"custom/exit": {
		"format": "",
		"on-click": "wlogout",
		"tooltip": false
	}
}
